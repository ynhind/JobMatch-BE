{
  "info": {
    "name": "JobMatch API",
    "description": "Complete API collection for JobMatch application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Job Seeker",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"js\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Employer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Company HR\",\n  \"email\": \"hr@company.com\",\n  \"password\": \"password123\",\n  \"role\": \"employer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('adminToken', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@jobmatch.com\",\n  \"password\": \"admin123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "login"]
            }
          }
        },
        {
          "name": "Get Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Job Seeker",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/js/profile",
              "host": ["{{baseUrl}}"],
              "path": ["js", "profile"]
            }
          }
        },
        {
          "name": "Update Basic Info",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"0123456789\",\n  \"location\": \"Ho Chi Minh City\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/js/profile/general",
              "host": ["{{baseUrl}}"],
              "path": ["js", "profile", "general"]
            }
          }
        },
        {
          "name": "Add Experience",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyName\": \"Tech Corp\",\n  \"position\": \"Software Developer\",\n  \"startDate\": \"2022-01-01\",\n  \"endDate\": \"2023-12-31\",\n  \"description\": \"Developed web applications\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/js/profile/experiences",
              "host": ["{{baseUrl}}"],
              "path": ["js", "profile", "experiences"]
            }
          }
        },
        {
          "name": "Search Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/js/jobs/search?keyword=developer&location=HCM&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["js", "jobs", "search"],
              "query": [
                {
                  "key": "keyword",
                  "value": "developer"
                },
                {
                  "key": "location",
                  "value": "HCM"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Apply for Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"coverLetter\": \"I am very interested in this position...\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/jobs/:jobId/apply",
              "host": ["{{baseUrl}}"],
              "path": ["jobs", ":jobId", "apply"],
              "variable": [
                {
                  "key": "jobId",
                  "value": "REPLACE_WITH_ACTUAL_JOB_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/js/applications",
              "host": ["{{baseUrl}}"],
              "path": ["js", "applications"]
            }
          }
        },
        {
          "name": "Save Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jobId\": \"REPLACE_WITH_ACTUAL_JOB_ID\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/js/jobs/saved",
              "host": ["{{baseUrl}}"],
              "path": ["js", "jobs", "saved"]
            }
          }
        }
      ]
    },
    {
      "name": "Employer",
      "item": [
        {
          "name": "Create Company Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyName\": \"Tech Solutions Inc\",\n  \"description\": \"Leading tech company\",\n  \"address\": \"123 Tech Street\",\n  \"city\": \"Ho Chi Minh City\",\n  \"phone\": \"0123456789\",\n  \"email\": \"contact@techsolutions.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/employer/profile",
              "host": ["{{baseUrl}}"],
              "path": ["employer", "profile"]
            }
          }
        },
        {
          "name": "Post Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Backend Developer\",\n  \"description\": \"We are looking for an experienced backend developer\",\n  \"requirements\": \"5+ years of Node.js experience\",\n  \"location\": {\n    \"city\": \"Ho Chi Minh City\",\n    \"isRemote\": false\n  },\n  \"salaryRange\": {\n    \"min\": 2000,\n    \"max\": 3000,\n    \"currency\": \"USD\"\n  },\n  \"jobType\": \"fulltime\",\n  \"experienceLevel\": \"senior\",\n  \"deadline\": \"2024-12-31\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/employer/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["employer", "jobs"]
            }
          }
        },
        {
          "name": "Get My Jobs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/employer/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["employer", "jobs"]
            }
          }
        },
        {
          "name": "Get Job Applicants",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/employer/jobs/:jobId/applicants",
              "host": ["{{baseUrl}}"],
              "path": ["employer", "jobs", ":jobId", "applicants"],
              "variable": [
                {
                  "key": "jobId",
                  "value": "REPLACE_WITH_ACTUAL_JOB_ID"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
